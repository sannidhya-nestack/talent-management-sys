# =============================================================================
#  Talent Management Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (MySQL)
# -----------------------------------------------------------------------------
DATABASE_URL=""

# Individual connection details (used by Prisma)
DATABASE_HOST=""
DATABASE_USER=""
DATABASE_PASSWORD=""
DATABASE_NAME=""

# Development environment connection details
DEV_DATABASE_URL=""
DEV_DATABASE_NAME=""

# -----------------------------------------------------------------------------
# Okta Authentication
# -----------------------------------------------------------------------------
# Your Okta domain
OKTA_DOMAIN=""

# OAuth 2.0 client credentials from Okta application
OKTA_CLIENT_ID=""
OKTA_CLIENT_SECRET=""

# Okta API token for user management (Admin > Security > API > Tokens)
OKTA_API_TOKEN=""

# Okta issuer URL
# Use org-level issuer (recommended): https://your-domain.okta.com
# Or custom authorization server: https://your-domain.okta.com/oauth2/default
# Note: Custom auth servers require API Access Management license in production
OKTA_ISSUER=""

# Okta group ID for administrators (found in Directory > Groups > [Group] > General)
ADMIN_OKTA_GROUP_ID=""

# =============================================================================
# OKTA APPLICATION CONFIGURATION
# =============================================================================
# Configure these URIs in your Okta OIDC Web Application:
#
# Sign-in redirect URIs:
#   - Development: http://localhost:3000/api/auth/callback/okta
#   - Production:  https://your-domain.com/api/auth/callback/okta
#
# Sign-out redirect URIs:
#   - Development: http://localhost:3000
#   - Production:  https://your-domain.com
#
# Initiate login URI (for IdP-initiated SSO from Okta dashboard):
#   - Development: http://localhost:3000/api/auth/okta/initiate-login
#   - Production:  https://your-domain.com/api/auth/okta/initiate-login
#
# Login flow: OIDC (recommended for web applications)
# Application type: Web Application
# Grant type: Authorization Code
# =============================================================================

# -----------------------------------------------------------------------------
# NextAuth.js
# -----------------------------------------------------------------------------
# Random secret for signing cookies (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=""

# Your application URL (no trailing slash)
NEXTAUTH_URL=""

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""
SMTP_FROM_NAME=""

# -----------------------------------------------------------------------------
# Webhook Security
# -----------------------------------------------------------------------------
# Secret for verifying webhook signatures
WEBHOOK_SECRET=""

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Application display name
APP_NAME=""

# Environment (development, staging, production)
NODE_ENV=""

# Logging level (debug, info, warn, error)
LOG_LEVEL=""

# Rate limiting (requests per minute for public endpoints)
RATE_LIMIT_MAX=""

# -----------------------------------------------------------------------------
# Optional: Error Tracking
# -----------------------------------------------------------------------------
# Sentry DSN for error reporting (optional)
SENTRY_DSN=""

# -----------------------------------------------------------------------------
# Optional: Backup Webhook
# -----------------------------------------------------------------------------
# URL to forward webhook data for backup/redundancy (optional)
BACKUP_WEBHOOK_URL=""

# -----------------------------------------------------------------------------
# Reserved: Future API Integrations
# -----------------------------------------------------------------------------
# Slots for future custom API endpoints
CUSTOM_API_ENDPOINT_1=""
CUSTOM_API_ENDPOINT_2=""
CUSTOM_API_ENDPOINT_3=""
